{
  "version": 1,
  "disable_existing_loggers": false,

  "formatters": {
    "colored": {
      "()": "colorlog.ColoredFormatter",
      "format": "%(log_color)s%(asctime)s - %(name)s - %(levelname)s - %(message)s%(reset)s",
      "log_colors": {
        "DEBUG": "cyan",
        "INFO": "green",
        "ERROR": "bold_red"
      }
    },
    "simple": {
      "format": "[%(asctime)s] %(levelname)s %(name)s: %(message)s"
    }
  },

  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "formatter": "colored",
      "level": "DEBUG",
      "stream": "ext://sys.stdout"
    },
    "file": {
      "class": "logging.FileHandler",
      "formatter": "simple",
      "level": "INFO",
      "filename": "logs/app.log",
      "encoding": "utf8"
    },
    "error_file": {
      "class": "logging.FileHandler",
      "formatter": "simple",
      "level": "ERROR",
      "filename": "logs/error.log",
      "encoding": "utf8"
    },
    "access_file": {
      "class": "logging.FileHandler",
      "formatter": "simple",
      "level": "INFO",
      "filename": "logs/access.log",
      "encoding": "utf8"
    }
  },

  "loggers": {
    "uvicorn": {
      "handlers": ["console", "file"],
      "level": "INFO",
      "propagate": false
    },
    "uvicorn.error": {
      "handlers": ["console", "file", "error_file"],
      "level": "INFO",
      "propagate": false
    },
    "uvicorn.access": {
      "handlers": ["access_file"],
      "level": "INFO",
      "propagate": false
    },
    "pronun_model": {
      "handlers": ["console", "file", "error_file"],
      "level": "INFO",
      "propagate": false
    },
    "watchfiles.main": {
      "handlers": ["console"],
      "level": "WARNING",
      "propagate": false
    }
  },

  "root": {
    "handlers": ["console", "file"],
    "level": "INFO"
  }
}
